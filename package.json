{
  "name": "docs-mcp-server",
  "version": "0.1.0",
  "description": "MCP server for fetching and searching documentation",
  "type": "module",
  "bin": {
    "docs-server": "./dist/server.js",
    "docs-cli": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "build": "tsup",
    "cli": "node --enable-source-maps dist/cli.js",
    "start": "node --enable-source-maps dist/server.js",
    "dev:cli": "npm run build && node --enable-source-maps dist/cli.js",
    "server": "node --enable-source-maps --watch dist/server.js",
    "dev:server": "run-p \"build -- --watch\" \"server\"",
    "test": "vitest",
    "lint": "biome check .",
    "format": "biome format . --write",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "@langchain/community": "^0.3.34",
    "@langchain/openai": "^0.5.0",
    "@modelcontextprotocol/sdk": "^1.6.1",
    "@types/node-fetch": "^2.6.12",
    "axios": "^1.8.3",
    "axios-retry": "^4.5.0",
    "better-sqlite3": "^11.9.1",
    "commander": "^13.1.0",
    "dompurify": "^3.2.4",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.41.0",
    "jsdom": "^26.0.0",
    "langchain": "0.3.19",
    "pg": "^8.14.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-html": "^16.0.1",
    "semver": "^7.7.1",
    "sqlite-vec": "^0.1.7-alpha.2",
    "turndown": "^7.2.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@types/better-sqlite3": "^7.6.12",
    "@types/jsdom": "~21.1.7",
    "@types/node": "^20.17.23",
    "@types/pg": "~8.11.11",
    "@types/semver": "^7.5.8",
    "@types/turndown": "^5.0.5",
    "drizzle-kit": "^0.30.5",
    "memfs": "^4.17.0",
    "npm-run-all": "^4.1.5",
    "semantic-release": "^24.2.3",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "vite": "^6.2.1",
    "vitest": "^3.0.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
